{
  "info": {
    "name": "LogisticsBackend",
    "_postman_id": "logistics-backend-collection",
    "description": "Collection for signup, signin and protected request",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup - Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"pmuser\",\n  \"email\": \"pmuser@example.com\",\n  \"password\": \"PmPassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signup",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "signup"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Signin - Get JWT",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"pmuser\",\n  \"password\": \"PmPassword123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/signin",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "signin"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save the returned token to an environment variable called 'jwt'",
              "if (responseCode.code === 200) {",
              "  var jsonData = pm.response.json();",
              "  if (jsonData.token) {",
              "    pm.environment.set('jwt', jsonData.token);",
              "    console.log('JWT saved to environment variable: jwt');",
              "  }",
              "} else {",
              "  console.log('Signin failed, status:', responseCode.code);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Protected GET - Example",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/test/user",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "test",
            "user"
          ]
        }
      },
      "response": []
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "jwt",
      "value": ""
    }
  ]
}
