{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {      
      "phases": {
        "setup": {
          "nixPkgs": ["...", "jdk17", "maven"]
        }
      },
      "buildCmd": "cd backend && ./mvnw -Dmaven.test.skip=true clean package",
      "startCmd": "java -jar backend/target/*.jar -Dserver.port=$PORT"
    }
  }
}